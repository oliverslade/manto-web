{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Manto": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.HttpsPolicy.HttpsRedirectionMiddleware": "Error",
      "System.Net.Http.HttpClient": "Information"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "HH:mm:ss.fff "
    }
  },
  "ApplicationSettings": {
    "Server": {
      "Port": 5000
    },
    "Security": {
      "EnableHsts": false,
      "AllowedApiEndpoints": [
        "https://api.anthropic.com",
        "http://localhost:3001"
      ]
    }
  }
}
