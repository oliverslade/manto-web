{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Manto": "Information",
      "Microsoft.AspNetCore": "Error",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Error",
      "Microsoft.AspNetCore.HttpsPolicy.HttpsRedirectionMiddleware": "Error",
      "System.Net.Http.HttpClient": "Error"
    },
    "Console": {
      "IncludeScopes": false,
      "TimestampFormat": "HH:mm:ss "
    }
  },
  "ApplicationSettings": {
    "Server": {
      "Port": 8080,
      "AllowedHosts": "*"
    },
    "Security": {
      "EnableHsts": true,
      "AllowedApiEndpoints": ["https://api.anthropic.com"]
    },
    "Features": {
      "SupportedProviders": [
        {
          "Name": "anthropic",
          "DisplayName": "Anthropic",
          "ApiEndpoint": "https://api.anthropic.com",
          "ApiVersion": "2023-06-01"
        }
      ],
      "Api": {
        "AnthropicKeyPrefix": "sk-ant-",
        "PreferredModelId": "claude-3-5-haiku",
        "Endpoints": {
          "Models": "/api/models",
          "Messages": "/api/messages"
        }
      },
      "Validation": {
        "MaxMessageLength": 4000,
        "MinApiKeyLength": 10
      },
      "Models": {
        "MaxTokens": 1024,
        "Temperature": 0.7,
        "SystemMessage": "Be concise in your responses unless asked otherwise. When explaining concepts, prefer tables and short paragraphs."
      }
    }
  }
}
